<body>
  <h1>Mochila Virtual</h1>
  <div>
    <input type="text" id="itemInput" placeholder="Digite o nome do item" />
    <button onclick="adicionarItem()">Adicionar</button>
  </div>
  <ul id="listaMochila"></ul>

  <script>
    const mochila = [];

    function atualizarLista() {
      const lista = document.getElementById('listaMochila');
      lista.innerHTML = '';
      mochila.forEach((item, index) => {
        const li = document.createElement('li');
        li.textContent = item;

        const btnRemover = document.createElement('button');
        btnRemover.textContent = 'Remover';
        btnRemover.onclick = () => {
          mochila.splice(index, 1);
          atualizarLista();
        };

        li.appendChild(btnRemover);
        lista.appendChild(li);
      });
    }

    function adicionarItem() {
      const input = document.getElementById('itemInput');
      const valor = input.value.trim();
      if (valor === '') {
        alert('Por favor, digite um item.');
        return;
      }
      mochila.push(valor);
      input.value = '';
      atualizarLista();
    }

    // Atualiza a lista inicialmente (vazia)
    atualizarLista();
  </script>
</body>
